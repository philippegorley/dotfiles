[user]
    email = gorley.philippe@gmail.com
    name = philippegorley
[push]
    default = simple
[alias]
    all = "!f() { ls -R -d */.git | sed 's,/.git,,' | xargs -I{} git -C {} $1; }; f"
    unstage = reset HEAD
    undo = reset --soft HEAD^
    back = "!f() { git reset --hard HEAD~$1; }; f"
    blame-file = "!f() { git log -p -M --follow --stat -- $1}; f"
    first-ci = "!git log $(git rev-list --max-parents=0 HEAD)"
[color]
    ui = true
[pull]
    rebase = true

